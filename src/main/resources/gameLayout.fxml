    <VBox alignment="CENTER" layoutX="320" layoutY="150">
        <VBox alignment="CENTER" prefWidth="150" prefHeight="110" styleClass="timePanel">
            <Label styleClass="scoreClass" text="Time:~" />
            <Text fx:id="gameTime" styleClass="scoreClass" text="00:00" />
        </VBox>
        <!-- HOLD BRICK PANEL -->
        <Label styleClass="nextBrickLabel" text="Next brick" />
        <BorderPane maxWidth="100" prefHeight="70" prefWidth="100" styleClass="nextBrick">
            <center>
                <GridPane fx:id="holdBrick" alignment="CENTER" hgap="1" vgap="1" />
            </center>
        </BorderPane>
        <!-- ROW COUNTER PANEL -->
        <VBox alignment="CENTER" layoutX="320" layoutY="350">
            <VBox alignment="CENTER" prefWidth="150" prefHeight="110" styleClass="rowPanel">
                <Label styleClass="scoreClass" text="Lines:~" />
                <Text fx:id="countRowsValue" styleClass="scoreClass" text="000" />
            </VBox>
        </VBox>
    </VBox>

