<?import com.comp2042.view.scenes.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<Pane fx:controller="com.comp2042.controller.GuiController"
      xmlns:fx="http://javafx.com/fxml">
    <GridPane fx:id="shadowPanel" vgap="1" hgap="1"/>
    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
    <BorderPane styleClass="gameBoard" fx:id="gameBoard" layoutX="525" layoutY="147">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
        </center>
    </BorderPane>

    <VBox alignment="CENTER" layoutX="810" layoutY="167">
        <VBox alignment="CENTER">
            <Label styleClass="scoreClass" text="Score:" />
            <Text fx:id="scoreValue" styleClass="scoreClass" text="Text" />
        </VBox>
        <VBox alignment="CENTER">
            <Label styleClass="nextBrickLabel" text="Next brick" />
            <BorderPane maxWidth="100" prefHeight="70" prefWidth="100" styleClass="nextBrick">
                <center>
                    <GridPane fx:id="nextBrick" alignment="CENTER" hgap="1" vgap="1" />
                </center>
            </BorderPane>
        </VBox>
    </VBox>

    <Group fx:id="groupNotification" layoutX="539" layoutY="350">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>